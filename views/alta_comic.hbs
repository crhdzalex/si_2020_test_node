<form action="/grabar" method="post">
    <div class="form-group">
      <label for="nombre">Nombre:</label>
      <input type="text" class="form-control" id="nombre"
              placeholder="nombre del comic" name="nombre">
    </div>

    <div class="form-group">
      <label for="imagen">Imagen:</label>
      <input type="text" class="form-control" id="imagen"
              placeholder="Url de la imagen" name="imagen">
    </div>

    <div class="form-group">
      <label for="poder">Poderes:</label>
      <input type="text" class="form-control" id="poder"
              placeholder="Cual es su gracia" name="poder">
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
  </form>
